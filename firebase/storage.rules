rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthed() {
      return request.auth != null;
    }
    
    function isOwner(uid) {
      return request.auth.uid == uid;
    }

    // Profile photos
    match /users/{uid}/profile/{fileName} {
      allow read: if true; // Public read for profile photos
      allow write: if isOwner(uid);
      allow delete: if isOwner(uid);
    }

    // Chat images - CORS uyumlu
    match /chats/{chatId}/images/{fileName} {
      allow read: if true; // Public read to avoid CORS
      allow write: if isAuthed();
      allow delete: if false;
    }

    // Chat files - CORS uyumlu
    match /chats/{chatId}/files/{fileName} {
      allow read: if true; // Public read to avoid CORS
      allow write: if isAuthed();
      allow delete: if false;
    }

    // Chat audio - CORS uyumlu
    match /chats/{chatId}/audio/{fileName} {
      allow read: if true; // Public read to avoid CORS
      allow write: if isAuthed();
      allow delete: if false;
    }

    // Deny all other requests
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
